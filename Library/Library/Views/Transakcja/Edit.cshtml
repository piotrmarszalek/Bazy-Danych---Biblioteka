@model Library.Models.Transakcja


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Transakcja</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TransakcjaId)


        <div class="form-group">
            @Html.LabelFor(model => model.DataOddania, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DataOddania, new { type = "date" })
                @Html.ValidationMessageFor(model => model.DataOddania, "", new { @class = "text-danger" })
            </div>
        </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
