<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> BIBLIOTEKA </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Biblioteka", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("O projekcie", "About", "Home")</li>
                    <li>@Html.ActionLink("Autorzy", "Index", "Autor")</li>
                    <li>@Html.ActionLink("Gatunki", "Index", "Gatunek")</li>
                    <li>@Html.ActionLink("Wydawnictwa", "Index", "Wydawnictwo")</li>
                    <li>@Html.ActionLink("Książki", "Index", "Ksiazka")</li>
                    <li>@Html.ActionLink("Miasta", "Index", "Miasto")</li>
                    <li>@Html.ActionLink("Czytelnicy", "Index", "Czytelnik")</li>
                    <li>@Html.ActionLink("Magazyn", "Index", "Magazyn")</li>
                    <li>@Html.ActionLink("Wypożyczalnia", "Index", "Transakcja")</li>
                    <li>@Html.ActionLink("Raporty | Informacje", "Details", "Transakcja")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Piotr Marszałek</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
